{
  "manifest_version": 3,
  "name": "side-comments",
  "description": "comments next to video",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "externally_connectable": {
    "matches": ["https://www.youtube.com/*"]
  },
  "permissions": ["activeTab", "tabs", "scripting", "nativeMessaging", "webNavigation"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}
